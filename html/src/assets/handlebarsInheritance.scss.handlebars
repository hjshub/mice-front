{{#spritesheet}}
  @mixin icon { display: inline-block; background-image: url($sprite-url); background-repeat: no-repeat; background-size:{{px.width}}
  {{px.height}}; } .icon {@include icon;} @mixin icon--retina { display: inline-block; background-image: url($sprite-url);
  background-repeat: no-repeat; background-size: calc({{px.width}}
  / 2) calc({{px.height}}
  / 2); }
{{/spritesheet}}

{{#sprites}}
  @mixin icon-{{name}}{ width:{{px.width}}; height:{{px.height}}; background-position:{{px.offset_x}}
  {{px.offset_y}}; } .icon-{{name}}{ @include icon-{{name}}; } @mixin icon--retina-{{name}}{ width:calc({{px.width}}
  / 2); height:calc({{px.height}}
  / 2); background-position: calc({{px.offset_x}}
  / 2) calc({{px.offset_y}}
  / 2); }
{{/sprites}}